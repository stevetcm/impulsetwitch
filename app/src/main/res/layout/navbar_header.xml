<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/navbar_header"
    android:layout_width="match_parent"
    android:layout_height="171dp">

    <ImageView
        android:id="@+id/navbar_icon"
        android:layout_width="@dimen/main_toolbar_height"
        android:layout_height="@dimen/main_toolbar_height"
        android:padding="12dp"
        android:layout_alignParentBottom="true"
        android:src="@drawable/ic_logo_normal_white"/>

    <RelativeLayout
        android:id="@+id/navbar_info_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="6dp"
        android:layout_toRightOf="@+id/navbar_icon"
        android:layout_alignParentBottom="true">

        <TextView
            android:id="@+id/navbar_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:text="@string/app_name"
            android:textSize="17sp"
            android:textStyle="bold"
            android:textColor="?attr/navBarItemColor"/>

        <TextView
            android:id="@+id/navbar_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/navbar_title"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:text="@string/login_prompt_text"
            android:textColor="?attr/navBarItemColor"/>

    </RelativeLayout>

</RelativeLayout>